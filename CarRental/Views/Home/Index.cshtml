@model List<CarRental.Services.Dto.MiniAdvertDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>List of Customers</h1>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <table border="1" cellpadding="9">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.TextBox("customers[" + @i + "].CustomerID",
                              Model[i].CarModel,
                              new { @readonly = "readonly" })
            </td>
            <td>
                @Html.TextBox("customers[" + @i + "].CompanyName",
                          Model[i].CarBrand)
        </td>
        <td>
            @Html.TextBox("customers[" + @i + "].ContactName",
                      Model[i].CarLocation)
    </td>
    <td>
        @Html.TextBox("customers[" + @i + "].Country",
                  Model[i].CarYear)
</td>
</tr>
}
        <tr>
            <td colspan="4">
                <input type="submit" value="Submit" />
            </td>
        </tr>
    </table>
}